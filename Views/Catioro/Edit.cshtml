@model escola_dos_catioros.Models.Catioro

@{
    ViewData["Title"] = "cadastrar catioro";
}

<h1>🐶editar o perfil do doguíneo</h1>

@using (Html.BeginForm()){
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true,"",new { @class = "text-danger "})
        @Html.HiddenFor(m => m.Id)
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Idade"></label>
        <input asp-for="Idade" class="form-control" type="number" />
        <span asp-validation-for="Idade" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Raca"></label>
        <input asp-for="Raca" class="form-control" />
        <span asp-validation-for="Raca" class="text-danger"></span>
    </div>
    <button type="submit" class="btn">💾salvar</button>
    @Html.ActionLink("😕cancelar", "View", new { id = @Model.Id }, new { @class = "btn btn-default" })
}

